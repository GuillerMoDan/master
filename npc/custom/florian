//-----------------------------------------------------------ENCANTADOR DE EQUIPO UNITY-------------------------------------------------
florian,144,135,4	script	Unity Crafter	813,{
cutin "fey_nor",2;
mes "^0B610BBlacksmith^000000";
mes "Bienvenido "+strcharinfo(0)+", sabias que puedo modificar equipos basicos a unos mas funcionales?.";
next;
mes "^0B610BBlacksmith^000000";
mes "Estas son mis opciones:";
mes "Antes de crearlos deberas fijarte si tu job los puede equipar! OK? no hay devoluciones.";
next;
cutin "teup_gye",2;
menu

"- ^0B610BUnity Agi Boots^000000",unagboot,//22079
"- ^0B610BUnity Agi Manteau^000000",unagma,//20781
"- ^0B610BUnity Agi Mantle^000000",unimant,//15153
"- ^0B610BUnity Buckler^000000",unibuck,//28905
"- ^0B610BUnity Chain Mail^000000",uncha, //15152
"- ^0B610BUnity Dex Shoes^000000",unds,//22080
"- ^0B610BUnity Dex Suit^000000",unsut,//15154
"- ^0B610BUnity Exquisite Muffler^000000",unexmu,//20787
"- ^0B610BUnity Guard^000000",unguard,//28904
"- ^0B610BUnity Int Shoes^000000",unis,//22081
"- ^0B610BUnity Robe^000000",unrobe,//15155
"- ^0B610BUnity Str Boots^000000",unstrboot,//22078
"- ^0B610BUnity Str Manteau^000000",unstrmanta,//40053
"~ ^660099Cancel^000000",sal;


//------------
unstrmanta:
mes "^0B610BBlacksmith^000000";
mes "Hacer 1 <ITEM>Unity Str Manteau<INFO>40053</INFO></ITEM> req:";
mes "1,000,000.z";
mes "1 Manteau (1)"; //2506
mes "50 Fur"; //6020
mes "100 Blood of Wolf"; //6252 
mes "100 Clover"; //705
next;

menu
"^0B610BUnity Agi Manteau^000000",unstrmanta2,
"^660099Cancel^000000",sal;

unstrmanta2:
if( countitem(2506) < 1 || countitem(705) < 100 || countitem(6020) < 50 || countitem(6252) < 100) callsub Falta;
if(Zeny < 1000000 ) callsub Faltaz;
mes "^0B610BBlacksmith^000000";
mes "Perfecto, tienes lo necesario.";
next;
progressbar "ffff00",1;
specialeffect 101;
sleep2 200;
specialeffect 518;
sleep2 500;
specialeffect 518;
delitem 2506,1;
delitem 705,100;
delitem 6020,50;
delitem 6252,100;
set Zeny,Zeny-1000000;
cutin "",255;
mes "^0B610BBlacksmith^000000";
mes "Ya esta lista tu Manteau, que la disfrutes.";
getitem 40053,1;
specialeffect2 18;
end;

