//-------------------------------------------------------------------EDDGA BLANCO PELEA QUEST---------------------------------------------------------
florian,178,147,6	script	Casa de Eddga	837,{
mes "^FF9900Aviso^000000";
mes "No te pierdas la oportunidad de pelear contra el fabuloso Eddga Blanco";
next;
mes "^0000FFPremios^000000";
mes "Derrotalo y ganaras:";
mes "- King Tiger Doll Hat";
end;
}

s_atelier,76,117,5	script	Valor Tiger	586,{
if (gettimetick(2) < jodaedd) {
specialeffect 505;
npctalk "Tengo trabajo que hacer, hablemos en unas 4 horas te parece?.!";
end;
}

specialeffect 571;
sc_start SC_Stun,500,1;
sc_start SC_Freeze,500,1;
specialeffect 668;
sc_start SC_CURSE,500,1;
sc_start SC_Silence,500,1;
mes "^FF9900Valor Tiger^000000";
mes "Bienvenido a mi herreria!";
mes "Soy el administrador.";
next;
mes "^FF9900Valor Tiger^000000";
mes "Hace mucho tiempo no recibo visitas de extranjeros.";
mes "y bueno aprovechando la ocasion me gustaria saber si te interesa esto.";
next;
mes "^FF9900Valor Tiger^000000";
mes "me preguntaba si te gustaria probar tu valor?";
mes "este tigre viejo necesita desempolvarse con un combate y quien mejor que tu!";
next;
menu
"^0000FFAceptar Desafio^000000.",pelea,"^FF0000No tengo animos^000000.",sal;
pelea:
mes "^FF9900Valor Tiger^000000";
mes "No quiero abusar de los debiles! necesito pruebas de que seras un  contendiente digno";
next;
mes "^FF9900Valor Tiger^000000";
mes "ya se! Dame pruebas de que haz derrotado a un ^FF9900Eddga^000000.";
mes "Trae ^FF99005 Tiger Skin^000000 y te concedere el derecho de luchar conmigo.";
next;
menu
"^0000FFEntregar las 5 Tiger Skins^000000.",pelear,"^FF0000Retirarse inteligentemente^000000.",sal;

pelear:
mes "^FF9900Valor Tiger^000000";
mes "Vaya vaya! eres muy valiente para mi gusto!";
mes "Veamos si es cierto que tienes esas ^FF99005 Tiger Skin^000000";
next;
progressbar "ffff00",1;
if( countitem(1029) < 5) callsub Falta;
specialeffect 602;
npctalk "Si las tienes! eso significa una sola cosa";
specialeffect 817; soundeffectall "eddga_die.wav",0;
sleep2 1000;
specialeffect 502,0,"Valor Tiger";
specialeffect 501,0,"Valor Tiger";
announce strcharinfo(0)+" Ha retado al Valor Tiger mano a mano!",bc_all,0xFF9900;
delitem 1029,5;
sleep2 1000;
npctalk "Espero que estes listo para mi desafio!";
close2; 
specialeffect 103;
sleep2 500;
npctalk "Vamos a tirar la mano!";
hideonnpc "Valor Tiger";
sleep2 1500;
warp "florian",196,134;	
sleep2 2500;
announce strcharinfo(0)+" Listo para pelear cretino!",bc_all,0xFF9900;
areamonster "florian",211,134,211,134,"Valor Tiger",3924,1,"weddga::OnMobKilled";
end;

falta:
specialeffect2 255;
mes "^FF9900Valor Tiger^000000";
mes "Que tenemos aqui!";
mes "nada de nada!";
next;
specialeffect2 255;
mes "^FF9900Valor Tiger^000000";
mes "Cuando quieras pelear conmigo recuerda traer contigo ^FF99005 Tiger Skins^000000,.... Adios!..";
next;
specialeffect 433;
sleep2 500;
warp "rent1",20,21;
atcommand "@undisguise";
end;

sal:
mes "^FF9900Valor Tiger^000000";
mes "Justo como lo pense, un completo gallina";
mes "dejame ahorrarte el trabajo";
atcommand "@disguise 1241";
specialeffect 817; soundeffectall "eddga_die.wav",0;
next;
mes "^FF9900Valor Tiger^000000";
mes "adios gallinita! nos vemos";
close;
}

-	script	weddga	-1,{
OnMobKilled:
announce strcharinfo(0)+" Ha vencido al poderoso Eddga Blanco!",bc_all,0xFF9900;
sleep2 2000;
warp "s_atelier",72,120;	
sleep2 2000;
hideoffnpc "Valor Tiger";
areamonster "prontera",156,186,155,174,"Eddga",1115,1,"eddgita::OnMobKilled";
announce "Eddga: Aprovechare esta confusion y atacare Prontera!",bc_all,0xFF8000;
specialeffect 817; soundeffectall "eddga_die.wav",0;
specialeffect 502,0,"Valor Tiger";
specialeffect 501,0,"Valor Tiger";
atcommand "@npctalk Valor Tiger,A eso llamo una buena pelea!";
mes "^FF9900Valor Tiger^000000";
mes "Gracias por esta sesion de sparring";
mes "mi trabajo apesta, a veces necesito desestresarme.";
next;
mes "^FF9900Valor Tiger^000000";
mes "Por cierto! no pienses que soy irresponsable toma esta medicina para ti.";
mes "se que mis golpes doleran maÃ±ana";
next;
specialeffect2 18;
getitem 14535,1;
sleep2 50;
specialeffect2 18;
getitem 12299,1;
sleep2 50;
specialeffect2 18;
getitem 7539,3;
sleep2 50;
specialeffect2 18;
getitem 14441,1;
set jodaedd, gettimetick(2) + 7200;
end;
}

-	script	eddgita	-1,{
OnMobKilled:
announce strcharinfo(0)+" Ha derrotado un Eddga Fugitivo!",bc_all,0xFF9900;
end;
}


//------------------------------------------DARK ARGOL FLORIAN SPEED BOSTER----------------------------------------------------
//--Darkargol DBR
florian,147,124,6	script	Dark Argol#florian	531,7,7,{

ontouch:
specialeffect 500;
cutin "jpn_darkalgol08",2;
specialeffect 273;
specialeffect2 492;
sleep2 200;
cutin "jpn_darkalgol12",2;
sleep2 200;
npctalk "Hola, pero si es... "+strcharinfo(0)+", No te vayas a meter en problemas aqui...";
cutin "jpn_darkalgol11",2;
sleep2 200;
cutin "jpn_darkalgol10",2;
sleep2 100;
cutin "jpn_darkalgol14",255; 
sc_start SC_SPEEDUP1,35000,50;
end;
}

prontera,144,145,6	script	Conductor de Bus	448,{
mes "Chof";
mes "Soy el chofer de esa guagua, y te puedo llevar a sitios especiales.";
next;
mes "Chof";
mes "Selecciona el destino";
next;
menu "Zona Quest",florian,"Nada",L_sal;

florian: 
mes "Chof";
mes "Listo! Seras trasladado hacia la Zona Quest";
next;
specialeffect2 367;
specialeffect2 71;
sleep2 1000;
warp "florian", 161, 125;
end;

L_sal:
mes "Chof";
mes "Sera en otra ocasion";
close;
}

//--------------------------------------------------Retorno desde Florian hasta la ciudad-------------------------------------------------------------------------
florian,163,127,4	script	Conductor de Bus#retorno	448,7,7,{
mes "Chof";
mes "Que te parece el lugar?, Sabias que hay otro sector de Quest?.";
next;
menu "Zona Quest #2",celest2,"Nada",L_sal;

celest2:
mes "Chof";
mes "Listo! Nos vamos al sector #2";
next;
specialeffect2 367;
specialeffect2 71; 	
sleep2 1000;
warp "celestiaj",68,39;
end;

L_sal:
mes "Chof";
mes "Sera en otra ocasion";
close;

ontouch:
specialeffect 391;
npctalk "Conductor: Bienvenido a la Zona Quest #1.. Habla conmigo cuando quieras ir a otras zonas.";
end;
}

//-----------------------------------------------------------ENCANTADOR DE EQUIPO CRIMSON-------------------------------------------------
florian,95,128,4	script	Crimson Crafter	726,{
if(countitem(989) < 1) goto Faltaanvil;

mes "^DF013ASmithGirl^000000";
mes "Hola "+strcharinfo(0)+", veo que tienes el mejor de los anvil, enterada de esto....! Sabias que puedo transformar tus armas UPG a CRIMSON?";
next;
mes "^DF013ASmithGirl^000000";
mes "Al transformarlas se volveran rojas y aumentaran un poco mas sus caracteristicas.";
mes "aqui te muestro las armas que puedo ir mejorando:";
next;
menu

"- ^DF0101Crimson Dagger^000000",crimdagg,//28705
"- ^DF0101Crimson Katar^000000",crimkat,//28007
"- ^DF0101Crimson Lance^000000",crimlance,//1498
"- ^DF0101Crimson Two-Handed Axe^000000",ctha,//28106
"- ^DF0101Crimson Two-Handed Sword^000000",cths,//21015
"~ ^660099Cancel^000000",sal;

//-----Crimson Two-Handed Axe-----
ctha:
mes "^DF013ASmithGirl^000000";
mes "Para la <ITEM>Crimson Two-Handed Axe<INFO>28106</INFO></ITEM> req:";
mes "1,000,000 Zeny";
mes "1 Upg Two-Handed Axe"; //1394
mes "1 Unidentified Mineral";
mes "1 Bloody Edge";
next;
menu
"^DF0101Crear Crimson Two-Handed Axe^000000",ctha2,
"^660099Cancel^000000",sal;


ctha2:
if( countitem(1394) < 1 || countitem(6048) < 1 || countitem(7024) < 1) callsub Falta;
if(Zeny < 1000000 ) callsub Faltaz;
mes "^DF013ASmithGirl^000000";
mes "Perfecto, tienes lo necesario.";
next;
progressbar "ffff00",1;
specialeffect 101;
sleep2 200;
specialeffect 518;
sleep2 500;
specialeffect 518;
delitem 1394,1;
delitem 6048,1;
delitem 7024,1;
set Zeny,Zeny-1000000;
cutin "",255;
mes "^DF013ASmithGirl^000000";
mes "Aqui tienes.";
getitem 28106,1;
specialeffect2 18;
end;

