	mes "mi especialidad son recolorear los Feather Berets.";
	next;
	mes .@n$;
	mes "Pintare un Feather Beret Original si me traes el tinte indicado.";
	set .@a,select(
	getitemname(.@it[0]), 						//Black
	"^8b4513"+getitemname(.@it[1])+"^000000",	//Brown
	"^e5c109"+getitemname(.@it[2])+"^000000",	//Gold
	"^03bc09"+getitemname(.@it[3])+"^000000",	//Green
	"^55aaff"+getitemname(.@it[4])+"^000000",	//Cyan
	"^ff4500"+getitemname(.@it[5])+"^000000",	//Orange
	"^ff1493"+getitemname(.@it[6])+"^000000",	//Pink
	"^9400d3"+getitemname(.@it[7])+"^000000",	//Purple
	"^ff0000"+getitemname(.@it[8])+"^000000",	//Red
	"^778899"+getitemname(.@it[9])+"^000000",	//Silver
	"^000000"+getitemname(.@it[10])+"^000000",	//White
	"Ninguno.");
	next;
	mes .@n$;
	if( .@a == 1 ){
		mes "Para hacer el "+getitemname(.@it[0])+" necesitas traerme lo siguiente:";
		mes "^de00001.^000000 1 Feather Beret";
		mes "^de00002.^000000 1 Black Dyestuffs";
		next;
		mes .@n$;
