//---------------------------------------------------MALANGDO CRAB ENCHANTER---------------------------------------------------------------------------------
florian,92,164,6	script	Malangdo Crab Enchant	2176,{

mes "^0000CCBlue Crab^000000";
mes "Como estas, "+strcharinfo(0)+", Tengo un enchant oculto para los arcos Malangdo Crabs.";
next;

menu
"^00cc00Me Interesa^000000",encamal,
"^ff0000Me da miedo..^000000",cancelat;

encamal:
mes "^0000CCBlue Crab^000000";
mes "Agrego una piedra encantada a este arco que disparara";
mes "<ITEM>Enchant<INFO>40047</INFO></ITEM>";
mes "polvo de diamante cuando uses Arrow Shower.";
next;

mes "^0000CCBlue Crab^000000";
mes "Este enchant es exclusivo del cuarto slot y unicamente para el Malangdo Crab, para incorporarlo necesitare los siguienes ingredientes.";
next;
mes "^0000CCBlue Crab^000000";
mes "1 Ice Scale"; //7562
mes "1 Crab Card"; //4153
mes "1 Gemstone (drop de TaoGunka)"; //7300
next;
mes "^0000CCBlue Crab^000000";
mes "Unicamente se encantara el objeto equipado, no se perderan las cartas compuestas.";
next;
mes "^0000CCBlue Crab^000000";
mes "ahora que fuiste informado dime.";
mes "Deseas generar este enchant?";
next;

menu
"^0000FFEncantar Blue Malangdo Crab^000000",encablu,
"^CC0000Encantar Malangdo Crab^000000",encamalang,
"Cancel",L_sal2;

encablu:
if( countitem(18200) < 1 || countitem(7562) < 1 || countitem(4153) < 1 || countitem(7300) < 1) goto Faltaitems;
mes "^0000CCBlue Crab^000000";
mes "Listo, procedere a efectuar el enchant...";
next;
if (!isequipped(18200)) callsub quepasa;
if(getequipid(9)+1) {
specialeffect 101;
sleep2 700;
set .@id, getequipid(9);
set .@ref, getequiprefinerycnt(9);
set .@card1, getequipcardid(9,0);
set .@card2, getequipcardid(9,1);
set .@card3, getequipcardid(9,2);
set .@card4, getequipcardid(9,3);
delitem 7562,1;
delitem 4153,1;
delitem 7300,1;
delitem2 .@id, 1, 1, .@ref, 0, .@card1, .@card2, .@card3, .@card4;
getitem2 .@id, 1, 1, .@ref, 0, .@card1, .@card2, .@card3, 40047;
equip .@id;
mes "^0000CCBlue Crab^000000";
mes "Felicidades, el enchant ha sido exitoso!.";
close;
}

emotion ET_SMILE;
mes "^0000CCBlue Crab^000000";
mes "eh eh ehhh! Aguarda un Momento";
mes "Grandisimo imbecil, acaso te desequipaste el Malangdo Blue Crab?.";
next;
mes "^0000CCBlue Crab^000000";
mes "eres un maricon te digo, piensas que encantare otra arma si la switcheas durante el proceso? sigue durmiendo de ese lado.";
end;

encamalang:
if( countitem(18107) < 1 || countitem(7562) < 1 || countitem(4153) < 1 || countitem(7300) < 1) goto Faltaitems;
mes "^0000CCBlue Crab^000000";
mes "Listo, procedere a efectuar el enchant...";
next;
if (!isequipped(18107)) callsub quepasa;
if(getequipid(9)+1) {
specialeffect 101;
sleep2 700;
set .@id, getequipid(9);
set .@ref, getequiprefinerycnt(9);
set .@card1, getequipcardid(9,0);
set .@card2, getequipcardid(9,1);
set .@card3, getequipcardid(9,2);
set .@card4, getequipcardid(9,3);
delitem 7562,1;
delitem 4153,1;
delitem 7300,1;
delitem2 .@id, 1, 1, .@ref, 0, .@card1, .@card2, .@card3, .@card4;
getitem2 .@id, 1, 1, .@ref, 0, .@card1, .@card2, .@card3, 40047;
equip .@id;
mes "^0000CCBlue Crab^000000";
mes "Felicidades, el enchant ha sido exitoso!.";
close;
}

emotion ET_SMILE;
mes "^0000CCBlue Crab^000000";
mes "eh eh ehhh! Aguarda un Momento";
mes "Grandisimo imbecil, acaso te desequipaste el Malangdo Blue Crab?.";
next;
mes "^0000CCBlue Crab^000000";
mes "eres un maricon te digo, piensas que encantare otra arma si la switcheas durante el proceso? sigue durmiendo de ese lado.";
end;

quepasa:
atcommand "@nuke "+strcharinfo(0)+"";
end;

Faltaitems:
mes "^0000CCBlue Crab^000000";
mes "Te faltan objetos, revisa bien tus cosas.";
end;

cancelat:
mes "^0000CCBlue Crab^000000";
mes "Nos vemos.";
end;


L_sal2:
mes "^0000CCBlue Crab^000000";
mes "Nos vemos.";
end;
}

//================================-----------Catalyzer Elemental Changer-----------======================================
florian,86,144,6	script	Elemental Switcher Device	660,{

cutin "rama_gem",2;
mes "^0000CCGenio de la Lampara^000000";
mes "Te interesa crear algo fascinante?";
mes "<ITEM>Catalyzer<INFO>31496</INFO></ITEM>.";
mes "Puedo cumplir realidad tu deseo de cambiar elementos de ataque!";
next;
mes "^0000CCGenio de la Lampara^000000";
mes "Este item no se consume cuando se usa, pero debes tener jellopy en el inventario para quemar y hacer funcionar su efecto.";
mes "Para hacerlo te cobrare 50,000,000 Zeny.";
next;
mes "^0000CCGenio de la Lampara^000000";
mes "Luego debes tener lo siguiente:";
mes "- 1 Golden Mace de (2) slots"; // 1539
mes "- 1 Charm of Flame Heart"; // 5926
mes "- 1 Charm of Mystic Frozen"; // 5927
mes "- 1 Charm of Rough Wind"; // 5928
mes "- 1 Charm of Great Nature"; // 5929
next;
mes "^0000CCGenio de la Lampara^000000";
mes "Los charms se fabrican en la Zona Quest 2, suerte con eso.";
next;
menu
"^0174DFCrear Catalyzer^000000",catalyzer,"^F00000Cancelar^000000",L_sal;

catalyzer:
mes "^0000CCGenio de la Lampara^000000";
mes "Veamos si tienes todo!.";
next;
if( countitem(1539) < 1 || countitem(5926) < 1 || countitem(5927) < 1 || countitem(5928) < 1 || countitem(5929) < 1) callsub Falta;
if(  Zeny < 50000000 ) goto Faltazen;
progressbar "ffff00",1;
delitem 1539,1;
delitem 5927,1;
delitem 5928,1;
delitem 5926,1;
delitem 5929,1;
set Zeny,Zeny-5000000;
specialeffect 101; 
sleep2 500;
cutin "",255;
specialeffect 635;
getitem 31496,1;

mes "^0000CCGenio de la Lampara^000000";
mes "Aqui tienes! cuidalo muy bien, no lo vendas por accidente!";
end;

Faltazen:
cutin "",255;
mes "^0000CCGenio de la Lampara^000000";
mes "No tienes zeny suficiente, el precio es 50,000,000.";
end;

Falta:
cutin "",255;
mes "^0000CCGenio de la Lampara^000000";
mes "^FF0000Te faltan itemes.^000000";
end;

L_sal:
cutin "",255;
mes "^0000CCGenio de la Lampara^000000";
mes "Hasta prontos.";
close;
}
