		set .@b,Select("No","Si");
		next;
		mes .@n$;
		if( .@b == 1 ){
			mes "Que esperas, ve a buscarlos.";
			close;
		} else {
			if( countitem(5498) < 1 || countitem(982) < 1 ) callsub Falta;
