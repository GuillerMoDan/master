//=-=-=-=-=-=-=-= Headgear Quest =-=-=-=-=-=-=-=
//-----------------Jumping Poring Hat----------------------
poring_w01,92,120,6	script	Jumping Poring	909,{

mes "^6600CCSmall Poring^000000";
mes "Hola "+strcharinfo(0)+", quieres elaborar un <ITEM>Jumping Poring<INFO>5640</INFO></ITEM>.?";
mes "Este hat es base para crear otros hats con los Npc de esta zona.";
next;
mes "^6600CCSmall Poring^000000";
mes "Tambien puedo transformar el Jumping Poring Hat a un Costume Rainbow Jumping Poring que podras ver en el menu.";
next;
mes "^6600CCSmall Poring^000000";
mes "Para hacer el jumping poring necesitas:";
mes "- 1 Poring Egg"; // 9001
mes "- 1 4leaf clover"; // 706
mes "- 100 Jellopy"; // 909
mes "- 1,000,000 Zeny";
next;
menu
"^088A08Jumping Poring^000000",jump,
"^04B4AECostume Rainbow Poring Hat^000000",cosjump,
"^FF0080Costume Poring in Shoulder^000000",poshold,
"^F00000Cancelar^000000",L_sal;

jump:
mes "^6600CCSmall Poring^000000";
mes "Veamos si tienes todo!.";
next;
if(Zeny < 1000000 ) goto Faltaz;
if( countitem(9001) < 1 || countitem(706) < 1 || countitem(909) <100) callsub Falta;
specialeffect 101; 
progressbar "ffff00",1;
delitem 9001,1;
delitem 706,1;
delitem 909,100;
set Zeny,Zeny-1000000;
specialeffect2 18;
getitem 7539,1;
getitem 5640,1;

mes "^6600CCSmall Poring^000000";
mes "Aqui tienes tu nuevo Hat!";
end;

cosjump:
mes "^6600CCSmall Poring^000000";
mes "Cambiare el Jumping Poring que tengas a un Costume Rainbow Jumping Poring Hat, esta accion no se podra revertir";
mes "<ITEM>Costume Rainbow Poring Hat<INFO>19676</INFO></ITEM>.";
next;
mes "^6600CCSmall Poring^000000";
mes "para esto necesitare el hat y 1 de cada piedra elemental:";
mes "- 1 Jumping Poring"; // 5640
mes "- 1 Flame Heart"; //994
mes "- 1 Mystic Frozen"; //995
mes "- 1 Rough Wind"; //996
mes "- 1 Great Nature"; //997
next;
mes "^6600CCSmall Poring^000000";
mes "Veamos si tienes todo!.";
next;

if( countitem(5640) < 1 || countitem(994) < 1 || countitem(995) <1 || countitem(996) <1 || countitem(997) <1) callsub Falta;
specialeffect 101; 
progressbar "ffff00",1;
delitem 5640,1;
delitem 994,1;
delitem 995,1;
delitem 996,1;
delitem 997,1;
specialeffect2 18;
getitem 19676,1;

mes "^6600CCSmall Poring^000000";
mes "Aqui tienes costume arcoiris, no hay devoluciones,!";
end;

poshold:
mes "^6600CCSmall Poring^000000";
mes "Cambiare el Jumping Poring que tengas a un Costume Poring in Shoulder, esta accion no se podra revertir";
mes "<ITEM>Costume Poring in Shoulder<INFO>31688</INFO></ITEM>.";
next;
mes "^6600CCSmall Poring^000000";
mes "para esto necesitare el Jumping poring Hat";
mes "- 1 Jumping Poring"; // 5640

next;
mes "^6600CCSmall Poring^000000";
mes "Veamos si tienes todo!.";
next;
if( countitem(5640) < 1) callsub Falta;
specialeffect 101; 
progressbar "ffff00",1;
delitem 5640,1;

specialeffect2 18;
getitem 31688,1;

mes "^6600CCSmall Poring^000000";
mes "Aqui tienes tu poring miniatura, ya sabes.. no hay devoluciones,!";
end;


Faltaz:
mes "^6600CCSmall Poring^000000";
mes "^FF0000No tienes suficiente Zeny..^000000";
end;

Falta:
mes "^6600CCSmall Poring^000000";
mes "^FF0000Te faltan items.^000000";
end;

L_sal:
mes "^6600CCSmall Poring^000000";
mes "Hasta pronto.";
close;
}

