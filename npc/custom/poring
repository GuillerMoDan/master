//-------------------------------------------------EVENTO CAMPOS ESPECIALES-----------------------------------------------------------------------
-	script	specialzone announce	-1,{

OnInit:
disablenpc "Angeling#Campos Especiales";
end;

OnClock0356:
announce "Angeling: Se han abierto los campos especiales poring aprovechen.",0;
sleep 5000;
announce "Angeling: Estare en prontera durante 1 hora, para acceder solo habla conmigo.",0;
enablenpc "Angeling#Campos Especiales";
sleep 5000;
atcommand "@npctalk Angeling#Campos Especiales,Hola hola hola! adivinen quien llego? así es, yo mismo Papi Angeling!";
sleep 3000; 
emotion ET_KIK, getnpcid(0, "Angeling#Campos Especiales"); 
initnpctimer;
end;

OnTimer3600000:   // default 30000ms = (30 segundos)
announce "Angeling: Se acabo el tiempo, los campos especiales poring han sido cerrados, todo el que este ahi sera recaleado en 5 segundos.",0;
sleep 2500; 
emotion ET_CRY, getnpcid(0, "Angeling#Campos Especiales"); 
atcommand "@npctalk Angeling#Campos Especiales,Adios chicos, hasta el proximo evento!.";
sleep 2250;
specialeffect 183,0,"Angeling#Campos Especiales";
sleep 250;
makeitem 7539,1,"prontera",165,167; makeitem 7539,1,"prontera",165,167; makeitem 7539,1,"prontera",165,167;
disablenpc "Angeling#Campos Especiales";
mapwarp "pozone", "prontera",155,172;
stopnpctimer;
end;
}


prontera,165,167,4	script	Angeling#Campos Especiales	1096,{
mes "^6600CCAngeling^000000";
mes "Quieres ir a matar porings en los campos especiales?";
mes "en ese lugar los monstruos tienen probabilidades de dropear monedas.";
next;
menu "Ir a los campos especiales",spec,"Informacion",info,"Nada",L_sal;

spec: 
warp "pozone",0,0;
end;

info:
mes "^6600CCAngeling^000000";
mes "soon";
end;

L_sal:
mes "^6600CCAngeling^000000";
mes "Deberias aprovechar, ya que solo abren 1 vez al dia y dura solo una hora.";
close;
}


