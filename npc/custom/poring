//-----------------Poring Cake Hat----------------------
poring_w01,104,98,4	script	Poring Hats	1090,{

mes "^6600CCMastering^000000";
mes "Conmigo puedes crear hats con tematica de fiesta";
mes "De momento puedo crear:";
mes "<ITEM>Poring Cake Hat (1)<INFO>5590</INFO></ITEM>.";
mes "y";
mes "<ITEM>Poring Party Hat<INFO>5318</INFO></ITEM>.";
next;
menu
"^088A08Poring Cake Hat^000000",poch,"^FA58F4Poring Party Hat^000000",pph,"^F00000Cancelar^000000",L_sal;

//--cake hat--
poch:
mes "^6600CCMastering^000000";
mes "Para el ^088A08Poring Cake Hat^000000 voy a necesitar:";
mes "- 50 Peaked Hat"; // 6021
mes "- 1 Jumping Poring"; // 5640
mes "- 1 Cake Hat"; // 5024
mes "- 2,000,000 Zeny";
next;
mes "^6600CCMastering^000000";
mes "Veamos si tienes todo!.";
next;
if(Zeny < 2000000 ) goto Faltaz;
if( countitem(5024) < 1 || countitem(6021) < 50 || countitem(5640) <1) callsub Falta;
specialeffect 101; 
progressbar "ffff00",1;
delitem 5024,1;
delitem 6021,50;
delitem 5640,1;
set Zeny,Zeny-2000000;
specialeffect2 18;
getitem 7539,3;
getitem 5590,1;
mes "^6600CCMastering^000000";
mes "Aqui tienes tu Poring Cake Hat y algo de mi parte!";
end;

//--party poring--
pph:
mes "^6600CCMastering^000000";
mes "Para el ^FA58F4Poring Party Hat^000000 voy a necesitar:";
mes "- 1 Wrapping Paper ID(7175)"; //7115
mes "- 50 Peaked Hat"; // 6021
mes "- 1 Jumping Poring"; // 5640
mes "- 1,000,000 Zeny";
next;
mes "^6600CCMastering^000000";
mes "Veamos si tienes todo!.";
next;
if(Zeny < 1000000 ) goto Faltaz;
if( countitem(7115) < 1 || countitem(6021) < 50 || countitem(5640) <1) callsub Falta;
specialeffect 101; 
progressbar "ffff00",1;
delitem 7115,1;
delitem 6021,50;
delitem 5640,1;
set Zeny,Zeny-2000000;
specialeffect2 18;
getitem 7539,1;
getitem 5318,1;
mes "^6600CCMastering^000000";
mes "Aqui tienes tu nuevo Poring Fiestero!";
end;

Faltaz:
mes "^6600CCMastering^000000";
mes "^FF0000No tienes suficiente Zeny..^000000";
end;

Falta:
mes "^6600CCMastering^000000";
mes "^FF0000Te faltan items.^000000";
end;

L_sal:
mes "^6600CCMastering^000000";
mes "Hasta pronto.";
close;
}

